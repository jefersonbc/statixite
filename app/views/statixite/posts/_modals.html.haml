    $(document).ready(function() {
      $('#boldText').on('shown.bs.modal', function () {
        $('#boldInput').focus()
      });
      $('#italicText').on('shown.bs.modal', function () {
        $('#italicInput').focus()
      });
      $('#listModal').on('shown.bs.modal', function () {
        $('#listInput').focus()
      });
      $('#linkModal').on('shown.bs.modal', function () {
        $('#linkInput').focus()
      });
      $('#videoModal').on('shown.bs.modal', function () {
        $('#videoInput').focus()
      });
    });
