/ Bold Text
#boldText.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "boldLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button", 'v-on': 'click: cancelModal'}
          %span{"aria-hidden" => "true"} &times;
        %h4#boldLabel.modal-title Add Bold Text
      .modal-body

        %input#boldInput{ type: 'text', 'v-model': 'boldText', class: 'form-control', 'v-on': 'keyup: addBoldText | key enter' }
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button", 'v-on': 'click: cancelModal'} Cancel
        %button.btn.btn-primary{"data-dismiss" => "modal", :type => "button", "v-on": "click: addBoldText"} Save Changes

